{
    "comments": {
      "lineComment": "--"
    },
    "brackets": [
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "(", "close": ")" }
    ],
    "onEnterRules": [
      {
        "beforeText": "^\\s*(?:Route|define|under).*?:\\s*$",
        "afterText": "^\\s*(?:where|test).*?:\\s*$",
        "action": { "indent": "indent" }
      }
    ]
    
  }