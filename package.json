{
  "name": "ask-mode",
  "displayName": "Ask Mode",
  "description": "being a vscode extension for ask",
  "version": "0.0.4",
  "icon": "icon/icon.png",
  "publisher": "etmclovin",
  "repository": {
    "type": "git",
    "url": "https://github.com/etmclovin/vscode-ask-mode"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ask",
        "aliases": [
          "Ask",
          "ask"
        ],
        "extensions": [
          ".ask"
        ],
        "configuration": "src/language/ask-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ask",
        "scopeName": "syntax.ask",
        "path": "src/syntaxes/ask.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ask-mode.setupCommand",
        "title": "Install Ask (Windows only)"
      },
      {
        "command": "ask-mode.runCommand",
        "title": "Run Ask Script"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ask-mode.runCommand",
          "when": "resourceExtname == .ask",
          "group": "navigation",
          "title": "Run Ask Script"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
